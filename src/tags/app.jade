app  
  header
    util-header(status='normal')
  div.wrap-content
    content
    modal-content
  util-now-loading#loading
  util-now-loading#loadingForModal
  util-footer

  style(scoped, type='less').
    :scope {
      display: block;
      width: 100%;
      height: 100vh;
      overflow: hidden;
      .wrap-content {
        position: relative;
        display: block;
        width: 100%;
        height: ~"calc(100% - 48px)";
        top: 48px;
        overflow-x: hidden;
        content {
          display: block;
          position: absolute;
          z-index: 1;
          width: 100%;
          height: 100%;
          overflow-y: scroll;
          -webkit-overflow-scrolling: touch;
          overflow-scrolling: touch;
          top: 0;
          left: 0;
          background: #fff;
          /*padding: 48px 0;*/

          transition: all 0.4s;
          opacity: 0.0;
        }
        .not-opacity {
          opacity: 1.0;
        }
        modal-content {
          display: block;
          position: absolute;
          z-index: 5;
          width: 100%;
          height: 100%;
          overflow-y: scroll;
          -webkit-overflow-scrolling: touch;
          overflow-scrolling: touch;
          top: 0;
          background: #fff;
          /*padding: 48px 0;*/
          /*margin-top: 48px;*/

          transition: all 0.4s;
          opacity: 0.0;
          left: 100%;
        }
        .show {
          opacity: 1.0;
          left: 0%;
        }
      }
    }


  script.

    var self = this;

