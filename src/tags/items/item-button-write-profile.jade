item-button-write-profile
  div.wrap-item.f.fh(onclick='{toPreInputProfile.bind(this, uid)}')
    p Write a Profile

  style(scoped, type='less').
    :scope {
      width: 132px;
      height: 32px;
      display: block;
      cursor: pointer;
      background: #2a2a2a;
      border-radius: 3px;
      .wrap-item {
        width: 100%;
        height: 100%;
        p {
          color: #FFF;
          letter-spacing: 0.6px;
          font-weight: lighter;
          text-align: center;
        }
      }
    }

  script.

    var self = this;

    //if(opts.content && 'uid' in opts.content) this.uid = opts.content.uid;
    this.uid = opts.uid;

    self.toPreInputProfile = function(uid) {
      riot.focusedUid = uid;
      window.location.href = `./#pre-input-profile/${uid}`;
    }